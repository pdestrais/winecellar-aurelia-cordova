<?xml version='1.0' encoding='utf-8'?>
<widget id="com.destrais.mycellar" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MyCellar</name>
    <description>
        MyCellar application made with Aurelia and Framework 7 (and cordova)
    </description>
    <author email="philippe.destrais@gmail.com" href="">
        Philippe Destrais
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/drawable-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="res/drawable-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/drawable-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/drawable-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
